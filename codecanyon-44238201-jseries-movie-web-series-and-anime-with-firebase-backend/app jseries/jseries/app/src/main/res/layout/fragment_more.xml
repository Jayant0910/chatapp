<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:background="#151515"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/ggpod"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/amoled_primary_color"
            />

        <RelativeLayout
            android:background="@color/amoled_primary_color"
            android:id="@+id/appvar"
            android:layout_below="@+id/ggpod"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/gomyacc1"
                style="@style/MyRipple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:outlineProvider="background"
                android:src="@drawable/person"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/loginanad"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="My Account"
                android:layout_toEndOf="@+id/gomyacc1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"/>



        </RelativeLayout>
        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/listtool"
            android:layout_below="@+id/appvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/mywaitingd"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/btacc"
                        android:layout_width="67dp"
                        android:layout_height="67dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/downloadj"
                            app:tint="@color/white" />



                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="5dp"

                        android:ellipsize="end"
                        android:layout_below="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Downloads"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:id="@+id/mylistgo"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/btacc"
                        android:layout_width="67dp"
                        android:layout_height="67dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/menuburger"
                            app:tint="@color/white" />



                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:layout_below="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="My List"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>



        </HorizontalScrollView>


        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/goplans"
            android:layout_below="@+id/listtool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#03A9F4"
            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/diamond"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/gositting"
            android:layout_below="@+id/goplans"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#404040"

            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/gototelegr"
            android:layout_below="@+id/gositting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#404040"

            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Follow us on Telegram"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/telegram"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/gotosite"
            android:layout_below="@+id/gototelegr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#404040"

            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Visit Site"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="180"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>


</ScrollView>

