<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgdark"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowInfoActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/youtubepl"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgviews"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:id="@+id/gooback"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="40dp"
                android:layout_height="30dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/youtubepl"
            android:id="@+id/showinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleser"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Piece"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/yeartxt"

                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/brandon"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1998"/>

                    <TextView
                        android:id="@+id/agetxt"

                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/brandon"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+12"/>

                    <TextView
                        android:id="@+id/countrytxt"

                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/brandon"
                        android:textSize="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United States"/>

                    <TextView
                        android:id="@+id/viewstxt"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/brandon"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.1K"/>

                    <ImageView
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/eye"
                        app:tint="@color/white"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>


                    <TextView
                        android:id="@+id/reattxt"

                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/brandon"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.2/10"/>

                </LinearLayout>

                <RelativeLayout

                    android:layout_marginTop="10dp"
                    android:id="@+id/watchepenoew"
                    android:layout_below="@+id/adddforcomnt"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btnflwolbg"
                    android:foreground="@drawable/click_animation_round">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/play" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Play"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12dp" />


                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:id="@+id/downloadfierstepe"
                    android:layout_below="@+id/adddforcomnt"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btnbg"
                    android:foreground="@drawable/click_animation_round">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/white"
                            android:src="@drawable/donwload" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Download Episode 1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12dp" />


                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:id="@+id/storytxt"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kim Shin is an immortal “goblin,” and has the rather honorable title of being the Protector of Souls. His roommate Wang Yeo also happens to have the equally lofty, if thoroughly opposing, title of Angel of Death, and he acts as the storied grim reaper that claims souls. However, both these devilishly handsome angels have a problem: Wang Yeo has amnesia and Kim Shin wants to end his own life. Unfortunately for goblins, the only way to defeat immortality is to marry a human bride. For that purpose, Kim Shin decides to win over Ji Eun Tak an optimistic high school girl who he thinks will be the priestess that ends his cursed existence."/>
                <TextView
                    android:id="@+id/genertxt"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="action , comedy , adventer"/>

                <RelativeLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">

                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:id="@+id/likeit"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/likeicon"
                            android:theme="@style/MyRipple"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:background="@drawable/round_ripple"
                            android:src="@drawable/pluss" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="MyList"
                            android:textColor="@color/white"
                            android:textSize="10dp" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:id="@+id/rate"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/rateicon"
                            android:theme="@style/MyRipple"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/thumbsup" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Rate"
                            android:textColor="@color/white"
                            android:textSize="10dp" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                    android:id="@+id/shaerit"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:layout_gravity="center|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:theme="@style/MyRipple"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/white"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="10dp" />



                </LinearLayout>




                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="30dp"
                        app:tabMode="scrollable"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        app:tabGravity="center"
                        app:tabIndicatorGravity="stretch"
                        app:tabTextColor="@color/white"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabIndicatorColor="@color/white"
                        app:tabTextAppearance="@style/tabtext"
                        app:tabIndicator="@drawable/tab_indicator"
                        app:tabSelectedTextColor="@color/bgdark"
                        android:id="@+id/tablay">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Episodes"
                            android:id="@+id/epessode"/>

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seasons"

                            android:id="@+id/season"/>



                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More Like this"

                            android:id="@+id/likethis"/>


                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cast"
                            android:id="@+id/cast"/>




                    </com.google.android.material.tabs.TabLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewPager"
                        />



                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>





</ScrollView>