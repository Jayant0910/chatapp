<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swip"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Dashboard"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/bgbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:id="@+id/allusersrel"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user"
                            app:tint="@color/white"

                            />

                        <TextView
                            android:id="@+id/usercounttxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Users"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:id="@+id/goseries"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/tv"
                            app:tint="@color/white"

                            />

                        <TextView
                            android:id="@+id/seriecounttxt"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Series"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:id="@+id/gomovies"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/popcorn"
                            app:tint="@color/white"

                            />

                        <TextView
                            android:id="@+id/moviescounttxt"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Movies"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:id="@+id/goanimes"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/film"
                            app:tint="@color/white"

                            />

                        <TextView
                            android:id="@+id/animescounttxt"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Animes"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:id="@+id/goplans"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/crown"
                            app:tint="@color/white"

                            />

                        <TextView
                            android:id="@+id/planscounttxt"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Plans"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:text="Tools"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/bgbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout

                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:id="@+id/additem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Add Serie Or Movie"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:id="@+id/addepisode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Add Episodes"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:id="@+id/addupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bgbar"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Add new Upgrade"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:id="@+id/goplans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/click_animation_round">


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>






</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>